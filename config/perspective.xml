<?xml version="1.0"?>
<perspective>
	<models>
		<model name="modules_generic/rootfolder">
			<children>
				<child model="modules_generic/folder" />
				<child model="modules_order/smartfolder" />
			</children>
			<drops>
				<drop model="modules_order/smartfolder" action="move" />
			</drops>
			<contextactions>
				<contextaction name="edit" />
				<contextaction name="createSmartfolder" />
			</contextactions>
		</model>
		<model name="modules_generic/folder">
			<children>
				<child model="modules_generic/folder" />
				<child model="modules_order/order" from="treenode" />
			</children>
			<columns>
				<column name="formattedTotalAmountWithTax" flex="1" label="TotalAmountWithTax" />
				<column name="orderStatusLabel" flex="2" label="OrderStatus" />
				<column name="customer" flex="4" label="Customer" />
				<column name="date" flex="1" label="Date" />
			</columns>
			<contextactions>
				<contextaction name="openFolder" />
			</contextactions>
		</model>
		<model name="modules_order/smartfolder">
			<children>
				<child model="modules_order/order" from="function" />
			</children>
			<columns>
				<column name="formattedTotalAmountWithTax" flex="1" label="TotalAmountWithTax" />
				<column name="orderStatusLabel" flex="2" label="OrderStatus" />
				<column name="customer" flex="4" label="Customer" />
				<column name="date" flex="1" label="Date" />
			</columns>
			<contextactions>
				<contextaction name="edit" />
				<contextaction name="delete" />
				<contextaction name="openFolder" />
			</contextactions>
		</model>
		<model name="modules_order/order">
			<contextactions>
				<contextaction name="edit" />
				<contextaction name="cancelOrder" />
			</contextactions>
		</model>
	</models>
	<toolbar>
		<toolbarbutton name="edit" />
	</toolbar>
	<actions>
		<action name="refresh" single="true" icon="refresh" label="&amp;modules.uixul.bo.actions.Refresh;" />
		<action name="openFolder" icon="open-folder" label="&amp;modules.uixul.bo.actions.OpenFolder;" />
		<action name="edit" single="true" permission="Load" icon="edit" label="&amp;modules.uixul.bo.actions.Edit;" />
		<action name="delete" permission="Delete" icon="delete" label="&amp;modules.uixul.bo.actions.Delete;" />
		<action name="cancelOrder" permission="CancelOrder" icon="reject" label="&amp;modules.order.bo.actions.CancelOrder;" />
		<action name="createSmartfolder" single="true" permission="Insert_smartfolder" icon="create-folder" label="&amp;modules.order.bo.actions.Create-smartfolder;" />
	</actions>
</perspective>