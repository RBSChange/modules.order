<?xml version="1.0" encoding="UTF-8"?>
<script>
	<binding fileName="modules/list/persistentdocument/import/list_binding.xml" />
	<binding fileName="modules/notification/persistentdocument/import/notification_binding.xml" />
	<systemfolder module="list" relatedmodule="order">
		<staticlist listid="modules_order/commentreminderreferences" label="m.order.bo.general.list.comment-reminder-references" description="m.order.bo.general.list.comment-reminder-references">
			<staticitem label="m.order.bo.general.list.comment-reminder-refrence-payment" value="payment" />
			<staticitem label="m.order.bo.general.list.comment-reminder-refrence-shipment" value="shipment" />
		</staticlist>
		<staticlist listid="modules_order/commentreminderselections" label="m.order.bo.general.list.comment-reminder-selections" description="m.order.bo.general.list.comment-reminder-selections">
			<staticitem label="m.order.bo.general.list.comment-reminder-selection-random" value="random" />
			<staticitem label="m.order.bo.general.list.comment-reminder-selection-all" value="all" />
		</staticlist>
	</systemfolder>
	<systemfolder module="notification" relatedmodule="order">
		<notification codename="modules_order/comment-reminder" label="Suggestion de commenter les produits commandés" availableparameters="{reminderProductBlock}, {orderId}, {orderAmount}, {orderAmountWithTax}, {orderAmountWithoutTax}, {title}, {fullname}, {orderDetail}, {billingMode}, {shippingMode}, {shippingFeesWithTax}, {shippingFeesWithoutTax}, {date}, {website-url}" subject="Donnez votre avis" header="&lt;strong&gt;Cher(chère) {fullname},&lt;/strong&gt;" body="Vous avez commandé dernièrement les produits suivants. Vous pouvez publier votre avis les concernant en suivant les liens indiqués : {reminderProductBlock}" footer="&lt;p&gt;&lt;strong&gt;Nous vous remercions de l'intérêt que vous portez à nos produits.&lt;/strong&gt;&lt;/p&gt;&lt;p&gt;L'équipe {website-url}.&lt;/p&gt;" template="default" />
	</systemfolder>
</script>